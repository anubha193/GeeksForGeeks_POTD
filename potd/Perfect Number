class Solution {
    static int isPerfectNumber(long n) {
        // code here
         long sum = 1;
        if(n % 2 != 0){
            return 0;
        }
        else{
            for(int i = 2 ; i*i <= n ; i++){
                if(n % i == 0){
                    if(i * i == n)sum = sum + i;
                    else sum = sum + i + (n/i);
                }
            }
        }
        
        if(sum == n)return 1;
        return 0;
    }
};
